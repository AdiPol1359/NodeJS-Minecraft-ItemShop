            if indexConfig.navbar.logo
                img(src= config.iconPath width='55' height='55' draggable='false' onclick="window.location.href='/'")

            i.fas.fa-bars
            ul
                li
                    a(href='/' class=(path == '/' ? 'active' : '')) Strona g&lstrok;&oacute;wna
                li
                    a(href='/regulamin' class=(path == '/regulamin' ? 'active' : '')) Regulamin
                div(style='clear: both;')

        .hide-menu
            ul
                li
                    a(href='/') Strona g&lstrok;&oacute;wna
                li
                    a(href='/regulamin') Regulamin
                
                div(style='clear: both;')
                i.fas.fa-times

